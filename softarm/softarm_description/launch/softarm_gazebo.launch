<?xml version="1.0" encoding="UTF-8"?>
<launch>
	
	<!-- start gazebo server with empty world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="paused" value="true"/>
	</include>

  	<!-- Load the parameter for the advanced plugin from the configuration file -->
  	<rosparam command="load" file="$(find softarm_description)/config/adv_plugin_config.yaml"/>

	<param name="robot_description" command="$(find xacro)/xacro --inorder '$(find softarm_description)/urdf/test_SArm.urdf.xacro'"/>

	<node name="my_robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" 
		args="-urdf -param robot_description -model softarm_description -x 0 -y 0 -z 0"/>


	<!-- calculate, publish and remap joint_states -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
		respawn="false" output="screen">
		<remap from="/joint_states" to="/softarm/joint_states" /> 
	</node> 
	
</launch>




